.m_bids
  position relative 
  & + .m_pagination
    text-align right
    margin-top 15px
  .bids-nav
    margin-bottom 15px
    ul
      padding 10px 0
      li
        display inline-block
        vertical-align middle
        margin-bottom 5px
        a
          anim()
          ptsans()
          display inline-block
          border-radius 5px
          padding 8px 10px
          color #fff
          background #94b371
          position relative 
          @media XS
            padding 8px 15px
          &:after
            anim()
            content ''
            width: 0;
            height: 0;
            border-style: solid;
            border-width: 11px 6.5px 0 6.5px;
            border-color: #497417 transparent transparent transparent;
            bottom 0
            left 50%
            margin-left -6.5px
            position absolute
            opacity 0
          &:hover,
          &.current
            background #487417
          &.current
            cursor default
            &:after
              opacity 1
              transform translateY(11px)
  .bids-list
    .item
      border-bottom 1px solid $violet
      &:nth-child(even)
        background #f6f0f6
      .bid-lead
        clearfix()
        position relative 
        padding 10px
        @media SM
          padding 15px
        .name
          float left
          width 50%
          font-weight bold
          color $dark
          @media XS
            position relative 
            padding-left 30px
            &:after
              content ''
              background: url('../images/sprite.png') no-repeat -300px 0;
              width: 21px;
              height: 25px;
              position absolute
              left 0
              top 50%
              margin-top -12.5px
          @media SM
            width 170px
            line-height 35px
          @media MD
            width 200px
        .docs
          float left
          width 50%
          text-align right
          @media SM
            text-align left
            width auto
            line-height 35px
            padding-left 15px
            padding-right 15px
            border-left 1px solid $violet
            border-right 1px solid $violet
          @media MD
            border-right none
          a
            position relative 
            color $violet
            text-decoration none
            font-size 12px
            padding-right 15px
            display inline-block
            span
              border-bottom 1px dashed $violet
            
            &:hover
              color $dark
              border-color $dark
              &:after
                border-color $dark transparent transparent transparent
            &.is-active
              color #487417
              span
                border-color #487417
              &:after
                border-color #487417 transparent transparent transparent
            &:after
              content ''
              width: 0;
              height: 0;
              border-style: solid;
              border-width: 5px 5px 0 5px;
              border-color: #7b5481 transparent transparent transparent;
              position absolute
              right 0
              top 50%
              margin-top -1px
            
        .status
          float left
          width 100%
          text-align right
          margin-top 10px
          @media SM
            margin-top 0
            float right
            width auto
          @media MD
            border-left 1px solid $violet
            padding-left 50px
          .label,
          .action
            @media XS
              display inline-block
              vertical-align middle
              line-height 35px
          .label
            font-size 14px
          .action
            margin-left 15px
            margin-top 5px
            @media XS
              margin-top 0
            @media SM
              margin-left 10px
            @media MD
              margin-left 20px
            a
              anim()
              sn()
              background #94b371
              border-radius 5px
              color #fff
              font-weight 600
              padding 5px 10px
              display inline-block
              vertical-align middle
              @media XS
                padding 0 10px
              &:hover
                background #ac6484
          .hold
            .label
              color $violet
          .success
            color #487417
            font-size 14px
            @media XS
              line-height 35px
            .date
              color $dark
      .bid-details
        display none
        background #94b371
        border-top 2px solid #487417
        border-bottom 2px solid #487417
        margin-bottom -1px
        padding 0 15px
        @media XS
          padding 15px 30px
        @media SM
          padding 15px 50px
          
        ol
          li
            position relative
            padding-left 30px
            counter-increment step-counter
            padding 15px 0px 15px 30px
            &:before
              content counter(step-counter)
              margin-right 10px
              margin-bottom 4px
              font-size 80%
              background-color #487417
              color #fff
              padding 3px 8px
              position absolute
              left 0
              top 15px
            & + li 
              border-top 1px solid #497417
            .title
              color #fff
              margin-bottom 5px
              @media SM
                padding-right 260px
            .attach-file
              position relative 
              @media SM
                position absolute
                right 0
                top 15px
                width 250px
                text-align right
              form
                position relative 
                label
                  display inline-block
                  cursor pointer
                input
                  opacity 0
                  width 0
                  height 0
                  font-size 0
                  text-indent -9999px
                  display block
                .attach-button
                  @media SM
                    margin-top -5px
                  span
                    anim()
                    sn()
                    border 2px solid #fff
                    border-radius 5px
                    color #fff
                    font-weight 600
                    font-size 11px
                    display inline-block
                    vertical-align middle
                    padding 5px
                    cursor pointer
                    &:hover
                      background #fff
                      color #94b371
              .attach-result
                .filename
                  color #fff
                  font-size 13px
                  line-height 20px
                  padding-left 18px
                  position relative 
                  @media SM
                    display inline-block
                    padding-right 25px
                    max-width: 250px;
                    white-space: nowrap;
                    overflow: hidden;
                    text-overflow: ellipsis;
                  &:after
                    content ''
                    background: url('../images/sprite.png') no-repeat -350px 0;
                    width: 12px;
                    height: 14px;
                    position absolute
                    left 0
                    top 50%
                    margin-top -(@height/2)
                .detach
                  height 20px
                  width 20px
                  position absolute
                  right 0
                  top 0
                  @media SM
                    top 2.5px
                  a
                    display block
                    width 100%
                    height 100%
                    position relative 
                    &:after
                      content ''
                      background: url('../images/sprite.png') no-repeat -300px -50px;
                      width: 9px;
                      height: 10px;
                      position absolute
                      left 50%
                      top 50%
                      margin-left -(@width/2)
                      margin-top -(@height/2)
                    &:hover
                      &:after
                        background-position -324px -50px
  &.messages
    .bids-list
      .item
        &.is-active
          .bid-lead
            .name:after 
              background: url('../images/sprite.png') no-repeat -400px -50px;
              width: 25px;
              height: 27px;
              margin-top -13.5px
        .bid-lead
          @media SM
            padding-right 300px
          .name
            width 100%
            @media XS
              margin-bottom 10px
              &:after
                background: url('../images/sprite.png') no-repeat -350px -50px;
                width: 25px;
                height: 16px;
                margin-top -8px
          .docs
            width 60%
            text-align left
            @media XS
              line-height 35px
            @media SM
              position absolute
              right 110px
              top 15px
              border-left: 1px solid #7b5481;
              border-right none
              width 190px
              text-align center
          .status
            width 40%
            margin-top 2px
            @media XS
              margin-top 0
            @media SM
              position absolute
              right 15px  
              top 15px  
              width auto
              border-left: 1px solid #7b5481;
              padding-left 20px
        .bid-details
          color #fff
          padding 15px
          @media SM
            padding 30px 50px
          p:last-child
            margin-bottom 0
  &.bills
    .bids-list
      .item
        .bid-lead
          .name
            float none
            width 100%       
            @media SM
              float left   
              width 200px
              border-right 1px solid $violet
          .bill-date
            float none
            width 100%
            margin-top 5px
            @media SM
              float left   
              padding-left 20px
              padding-right 20px !important
              border-right 1px solid $violet
              line-height 35px
              margin-top 0 !important
          .type
            float none
            width 100%
            margin-top 5px
            @media SM
              float left   
              padding-left 20px
              padding-right 20px
              line-height 35px
              margin-top 0 !important
          .status
            text-align left
            width 100%
            float none
            margin-top 5px
            @media SM
              position absolute
              right 10px
              top 10px
              width 100px !important
              text-align center
              border-left 1px solid $violet
              padding-right 0 !important
          .bill-date,
          .type,
          .status
            @media XS              
              display inline-block
              vertical-align middle
              margin-top 5px
              width auto !important
              padding-right 10px 
              padding-left 10px !important
            @media SM
              padding-left 20px !important
          .status
            @media SM
              padding-left 10px !important
          