.m_taxes
  position relative 
  table
    text-align left
    &.type-1
      tr
        th
          background #dfdfb3
        th.no-border
          box-shadow none
          background none
      tr:first-child + tr
        td
          background #dfdfb3
          font-weight bold
      tr
        td
          background #f5f0f5
        td.bg-white
          background #fff
        td:first-child
          max-width 540px
        td.bg-green
          background #94b371
          color #fff
          font-weight bold
        td.bg-light-green,
        td.bg-green + td
          background #c5d9ae
          font-weight bold
          
    &.type-2
      tr
        th
          background #dfdfb3
          & + th
            text-align center
        td
          background #fff
          & + td
            background #f6f1f6
            text-align center
            font-weight 700
    &.type-3
      tr
        th
          background #94b371
          color #fff
          & + th
            text-align center          
        td
          background #fff
          vertical-align top
          & + td
            text-align center
            font-weight 700
          .el + .el
            margin-top 20px
      td
        position relative 
      tr:first-child + tr td:first-child
        position relative         
        &:after
          content ''
          position absolute
          left 0
          bottom 0
          width 100%
          height 1px
          background $violet
      tr:last-child
        td + td
          background #dfdfb3
        td:first-child
          box-shadow none