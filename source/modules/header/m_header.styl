.m_header
  .top
    background $violet
    height 60px
    color #fff
    position relative 
    z-index 75
    @media MD
      height 115px
      overflow hidden
    &:before
      @media MD        
        content ''
        position absolute
        right -15px
        top 0
        width 50%
        background #fff
        height 100%
      
    &:after
      @media MD        
        content ''
        position absolute
        left 50%
        top 0
        margin-left 15px
        width 28px
        height 115px
        background url("../images/bottom-menu-0.png") no-repeat 0 0
    .contacts
      position relative 
      padding-left 40%
      text-align right
      @media MD
        padding-left 200px
        width 50%
        float left
      .logo
        position absolute
        left 0
        top 0
        line-height 55px
        width 40%
        text-align left
        @media MD
          width auto
          text-align left
          line-height 115px
        img
          max-width 100%
          display inline-block
          vertical-align middle
      .email,
      .tel
        line-height 1.2
        a
          color #fff
      .email
        @media MD
          margin-top 15px
        a
          text-decoration underline
          &:hover
            text-decoration none
      .tel
        padding-top 10px
        @media MD
          padding-top 20px
        span
          display none
          @media MD
            display block
            margin-bottom 5px
            font-size 12px
        a
          font-weight 700
          font-size 17px
  .bottom-blank-panel
    @media MD
      display none
    &.fixed
      height 75px
      @media MD
        height 0
  .bottom
    position relative 
    height 75px
    width 100%
    background #fff
    border-bottom 5px solid $violet
    @media MD
      height 60px
      border-bottom none
      background $violet
    &:before
      @media MD        
        content ''
        width 50%
        height 100%
        background $brown
        left 0
        top 0
        position absolute   
    &:after
      @media MD        
        content ''
        width 15px
        height 60px
        background url("../images/bottom-menu-1.png") no-repeat 0 0 
        position absolute
        left 50%
        top 0
    &.fixed
      position fixed
      left 0
      top 0
      z-index 100
      @media MD
        position relative
    .menu
      anim()
      position absolute
      left 0
      top 70px
      z-index 50
      background $violet
      width 100%
      transform translateY(-100%)
      @media MD
        transform translateY(0%)
        position static
        top 0
        background none
        width auto
        max-width $wrapper
        padding-left 15px
        padding-right 15px
        margin-left auto
        margin-right auto
      &.is-open
        transform translateY(0%)        
      ul
        li
          @media MD
            display inline-block
            vertical-align top
            margin-top 12px
          &:nth-child(6)
            @media MD
              margin-left 60px
              margin-right 30px
          &:nth-child(6),
          &:nth-child(7)
            @media MD
              a
                color $brown
          a
            ptsans()
            display block
            padding 10px 15px
            color #fff
            text-transform uppercase
            font-size 14px
            position relative 
            overflow hidden
            @media MD
              color $dark
              border-radius 5px
              padding 7px 10px
            &:after
              content ''
              transition .9s cubic-bezier(.25,.8,.25,1)
              position absolute
              left 0
              top 0
              background #ac6484
              width 100%
              height 100%
              transform translateX(-100%)
              @media MD
                display none
            &:hover
              &:after
                transform translateX(0%)
              @media MD
                background #ac6484
                color #fff
            span
              position relative 
              z-index 1
    .user-actions
      padding-left 25%
      @media MD
        padding-left 0
        position absolute
        right 15px
        top -92.5px
        width 240px
        right 50%
        margin-right -485px
      > div
        float left
        width 33.333%
        height 70px
        a
          anim()
          display block
          width 100%
          height 100%
          background #fff
          position relative 
          z-index 75
          padding-top 10px
          &:hover
            background $brown
            @media MD
              background #fff
            .label
              @media MD
                color $dark
                span
                  border-color $dark
          .icon
            height 30px
            margin-left auto
            margin-right auto
            background-image url("../images/sprite.png")
            background-repeat no-repeat
          .label
            text-align center
            color $violet
            font-size 12px
            line-height 1
            padding-top 5px
            padding-left 5px
            padding-right 5px
            span
              display inline-block
              vertical-align middle
              white-space nowrap
              overflow hidden
              text-overflow ellipsis
              max-width 100%
              border-bottom 1px dashed $violet
      > div + div
        position relative 
        text-align center
        &:after
          content ''
          height 60px
          width 1px
          background #d7d8d9
          position absolute
          left 0
          top 50%
          margin-top -30px
          z-index 76
      .locate
        .icon
          width 22px
          background-position 0 0
        a:hover
          @media MD
            .icon
              background-position 0 -50px
      .profile
        .icon
          width 30px
          background-position -50px 0
        a:hover
          @media MD
            .icon
              background-position -50px -50px
      .cart
        .icon
          width 29px
          background-position -100px 0
        .count
          position absolute
          left 50%
          top 4px
          margin-left 5px
          width 25px
          height 25px
          line-height 25px
          border-radius 50%
          background #ac6484
          color #fff
          font-weight 700
        a:hover
          @media MD            
            .icon
              background-position -100px -50px
    .mobile-menu
      position absolute
      left 0
      top 0  
      width 25%
      height 70px
      @media MD
        display none
      &:after
        content ''
        height 60px
        width 1px
        background #d7d8d9
        position absolute
        right 0
        top 50%
        margin-top -30px
        z-index 76
      .btn-mobile-menu
        width 100%
        height 100%
      