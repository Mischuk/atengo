$wrapper = 1000px
$gutter = 2%

html
  position relative 
  min-height 100%

  
.container
  height 100%
  overflow hidden
  &.shapes
    .container-shapes
      @media LG        
        width 921px
        height 1010px
        background url("../images/bg-articles-invert.png") no-repeat 0 0
        position absolute
        right 0
        top 0
        z-index -1
.wrapper
  clearfix()
  position relative
  max-width $wrapper
  height 100%
  padding-left 15px
  padding-right 15px
  margin-left auto
  margin-right auto

main
  display block
  max-width $wrapper
  padding 0 15px
  padding-bottom 30px
  margin 0 auto
  position relative
  @media SM
    padding-bottom 60px
  &.bg-pink
    background #f6f0f6
    @media MD
      &:after
        content ''
        width 25%
        height 109%
        background #f6f0f6
        position absolute
        left -6%
        top -3%
        // top -52px
        transform rotate(-9deg)
        z-index -1      
      article
        position static
        &:after
          content ''
          position absolute
          right -100%
          top 0
          width 100%
          height 100%
          background #f6f0f6
    &:before
      @media screen and (min-width: 1600px)
        content ''
        width 921px
        height 1010px
        position absolute
        left 0%
        margin-left -125px
        margin-left -13%
        top -125px
        background url("../images/bg-articles-invert.png") no-repeat 0 0
        z-index -1

// Grid layout
.row
  clearfix()
  .col
    float left
    width 100%
    margin ($gutter/2) 0
    @media XS
      &.xs1
        width 100%
        margin-left 0
        margin-right 0
        &:nth-child(2n+1),
        &:nth-child(3n+1),
        &:nth-child(4n+1),
        &:nth-child(6n+1)
          margin-left 0
          margin-right 0
      &.xs2
