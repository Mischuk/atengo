body
  opensans()
  font-size 14px
  line-height 1.6
h1, h2, h3, h4, h5, h6
  line-height 1.2
  condensed()
h1
  font-size 36px
h2
  font-size 30px
h3
  font-size 24px
h4
  font-size 18px
h5
  font-size 14px
h6
  font-size 12px
a[href^="tel"]
  cursor default
p
  margin-top 0
  margin-bottom 20px
article
  position relative
  color $dark
  a
    text-decoration underline
    &:hover
      color red
  img
    max-width 100%
    width 100%
    @media SM
      width auto
      float left
      max-width 100%
      margin-right 25px
      margin-bottom 10px
  h1, h2, h3, h4
    margin-bottom 0.5em
    color $dark
  h2
    font-size 24px
  h3
    font-size 20px
  h4
    font-size 16px
  p:last-child
    margin-bottom 0
  blockquote
    border-left 3px solid #424242
    padding-left 20px
  > ul
    padding-bottom 20px
    li
      position relative
      padding-left 10px
      &:before
        content 'â€¢'
        color #424242
        font-weight bold
        position absolute
        left 0
        top 0
      & + li
        margin-top 5px
  ol
    li
      position relative
      padding-left 30px
      counter-increment step-counter
      margin-bottom 15px
      &:before
        content counter(step-counter)
        margin-right 10px
        margin-bottom 4px
        font-size 80%
        background-color #424242
        color #fff
        font-weight bold
        padding 3px 8px
        border-radius $radius
        position absolute
        left 0
        top 0
  .lead-paragraph
    background #ccaed3
    color #fff
    padding 15px
    margin-bottom 20px
    p:last-child
      margin-bottom 0
  .backward
    padding-top 20px
    border-top 1px solid $violet
    a
      anim()
      background #94b371
      border-radius 5px
      color #f6f0f6
      text-decoration none
      padding 10px 30px
      position relative 
      display inline-block
      margin-left 10px
      &:after
        anim()
        content ''
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 5px 10px 5px 0;
        border-color: transparent #94b371 transparent transparent;
        position absolute
        left -10px
        top 50%
        margin-top -5px
      &:hover
        background $violet
        &:after
          border-color: transparent $violet transparent transparent;
.page-title
  position relative
  margin-bottom 30px
  .m_pagination
    position absolute
    right 0
    top -2px
    display none
    @media SM
      display block
  .counter
    position absolute
    right 0
    top 0
    color $dark
    line-height 28px
  h2
    font-size 24px
    padding-left 40px
    position relative 
    opensans()
    font-weight 600
    text-transform uppercase
    padding-right 65px
    &:after
      content ''
      background: url('../images/sprite.png') no-repeat -150px 0;
      width: 31px;
      height: 27px;
      position absolute
      left 0
      top 50%
      margin-top -(@height/2)